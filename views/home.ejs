<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>

<body>
    <div class="todo-container">
        <div class="header">
            <h1><i class="fas fa-tasks"></i> To-Do List</h1>
            <label class="switch">
                <input type="checkbox" id="night-mode-toggle">
                <span class="slider round"></span>
            </label>
        </div>
        <form id="todo-form" action="/create-task" method="post">
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" required>
            </div>
            <div class="form-group">
                <label for="due-date">Due Date:</label>
                <input type="date" id="due-date" name="date" required>
                <select id="category" name="category" required>
                    <option value="personal">Personal</option>
                    <option value="work">Work</option>
                    <option value="home">Home</option>
                </select>
            </div>
            <button type="submit">Add Task</button>
        </form>
        <ul id="task-list">
            <!-- Task items will be dynamically added here -->
            <% for(let i of task_List){%>
                <li>
            <span><%= i.description %></span>
            <div>
                
                <span><%= i.date %></span>
                <button class="category"><%= i.category%></button>
                <a href="/delete-task/?id=<%= i._id%>">
                <i class="fa-solid fa-trash delete" id="delete"></i>
            </a>
            </div>
        </li>
            <%}%>
        </ul>
    </div>
    <script src="https://kit.fontawesome.com/2e15ea0b69.js" crossorigin="anonymous"></script>
</body>

</html>